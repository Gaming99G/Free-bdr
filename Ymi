# MediaCreationTool'ü indirip çalıştırın
# Terminal veya Komut İstemcisine aşağıdaki komutu yazabilirsiniz:
MediaCreationTool.exe /auto diskpartlist disk
select disk X  # X USB'nizin numarasını belirleyin
clean
create partition primary
select partition 1
format fs=ntfs quick
active
assign letter=G  # G yerine kullanılacak harfi yazın
exit xcopy E:\*.* G:\ /E /F /H  <unattend xmlns="urn:schemas-microsoft-com:unattend:1.0">
    <settings pass="windowsPE">
        <component name="Microsoft-Windows-Setup" processorArchitecture="amd64" xmlns="urn:schemas-microsoft-com:unattend:1.0">
            <InstallTo>
                <DiskID>0</DiskID>
                <PartitionID>1</PartitionID>
            </InstallTo>
        </component>
    </settings>
    <settings pass="specialize">
        <component name="Microsoft-Windows-Shell-Setup">
            <OOBE>
                <HideEULAPage>true</HideEULAPage>
                <HideOEMRegistrationScreen>true</HideOEMRegistrationScreen>
            </OOBE>
        </component>
    </settings>
</unattend>
